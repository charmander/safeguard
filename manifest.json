{
	"manifest_version": 2,
	"name": "Safeguard",
	"version": "0.5.4",
	"description": "Redirects plain HTTP to HTTPS.",
	"icons": {
		"128": "icon.svg"
	},
	"permissions": [
		"storage",
		"webRequest",
		"webRequestBlocking",
		"http://*/*"
	],
	"browser_action": {
		"default_icon": "icon.svg",
		"default_title": "Manage HTTP blocking"
	},
	"background": {
		"scripts": ["background.js"]
	},
	"web_accessible_resources": [
		"pages/redirect-target.html"
	],
	"incognito": "spanning"
}
