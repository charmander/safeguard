{
	"manifest_version": 2,
	"name": "Safeguard",
	"version": "0.6.1",
	"description": "Redirects plain HTTP to HTTPS.",
	"icons": {
		"128": "icon.svg"
	},
	"permissions": [
		"storage",
		"webRequest",
		"webRequestBlocking",
		"http://*/*"
	],
	"browser_action": {
		"browser_style": true,
		"default_icon": "icon.svg",
		"default_title": "Manage HTTP blocking",
		"theme_icons": [{
			"light": "icon-light.svg",
			"dark": "icon.svg",
			"size": 32
		}]
	},
	"background": {
		"scripts": ["background.js"]
	},
	"web_accessible_resources": [
		"pages/redirect-target.html"
	],
	"options_ui": {
		"browser_style": true,
		"page": "pages/list.html"
	},
	"incognito": "spanning"
}
